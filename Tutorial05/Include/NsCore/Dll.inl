template<class T> 
T TryGetProcT(Handle handle, const NsChar* procName)
{
    return reinterpret_cast<T>(TryGetProc(handle, procName));
}

////////////////////////////////////////////////////////////////////////////////////////////////////
template<class T> 
T GetProcT(Handle handle, const NsChar* procName)
{
    return reinterpret_cast<T>(GetProc(handle, procName));
}

